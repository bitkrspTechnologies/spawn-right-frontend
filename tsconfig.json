{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/shop/[id]/page.jsx", "src/app/shop/compare-all/page.jsx", "src/components/Leaderboard/DummyComponent.jsx", "src/components/ShopRight/ProductShowcase/ProductCard.jsx", "src/components/LiveMatches/LiveMatches.jsx", "src/components/ShopRight/ProductShowcase/ProductShowcase.jsx", "src/components/TournamentMatchesPage.jsx", "src/components/Tournaments/TournamentsTabs/TournamentsTabs.jsx", "src/services/LiveMatches.js", "src/services/Product.js", "src/services/Tournaments.js", "src/components/Leaderboard/AllLeaderboardMatches.jsx", "src/components/FinishedMatch/FinishedMatch.tsx"],
  "exclude": ["node_modules"]
}
